{
  "name": "otter",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server watch\" \"npm run client watch\" \"npm run bs\" -n server,client,bs -c cyan,yellow,blue -k --color",
    "build": "npm run server && npm run client",
    "server": "node scripts/build-server.js",
    "client": "node scripts/build-client.js",
    "generate-ssl": "node scripts/generate-ssl.js",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint .",
    "stylelint": "stylelint src/**/*.scss",
    "bs": "browser-sync start --config bs-config.js",
    "fixlint": "stylelint src/**/*.scss --fix && eslint . --fix"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "config": "^1.30.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "lodash.defaultsdeep": "^4.6.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-steam": "^1.0.10",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "spdy": "^3.4.7"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-react-require": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-node8": "^1.2.0",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.24.5",
    "concurrently": "^3.6.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "node-sass": "^4.9.2",
    "parcel-bundler": "^1.9.7",
    "postcss-modules": "^1.1.0",
    "selfsigned": "^1.10.3",
    "stylelint": "^9.3.0",
    "stylelint-config-primer": "^2.2.9",
    "workbox-build": "^3.4.1"
  }
}
